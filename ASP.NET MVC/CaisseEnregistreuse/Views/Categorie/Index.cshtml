@model IEnumerable<CaisseEnregistreuse.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">+ Nouvelle catégorie</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Aucune catégorie enregistrée.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var categorie in Model)
            {
                var count = categorie.Produits?.Count ?? 0;
                var produitText = count > 1 ? "produits" : "produit";

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <!-- Nom catégorie -->
                            <h5 class="card-title">@categorie.Nom</h5>

                            <!-- Nombre de produits associés -->
                            <p class="text-muted mb-3"> @count produit@(count > 1 ? "s" : "") associé@(count > 1 ? "s" : "")</p>

                            <!-- Actions -->
                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@categorie.Id" class="btn btn-sm btn-outline-secondary w-100">Détails</a>
                                <a asp-action="Edit" asp-route-id="@categorie.Id" class="btn btn-sm btn-outline-success w-100">Modifier</a>
                                <a asp-action="Delete" asp-route-id="@categorie.Id" class="btn btn-sm btn-outline-danger w-100" onclick="return confirm('Supprimer cette catégorie ?');">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
