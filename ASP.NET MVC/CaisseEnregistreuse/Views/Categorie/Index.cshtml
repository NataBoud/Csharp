@model IEnumerable<CaisseEnregistreuse.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill fw-semibold ps-2 pe-3 py-0 d-flex align-items-center">
            <i class="bi bi-plus fs-3 fw-bolder me-1"></i> Nouvelle catégorie
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Aucune catégorie enregistrée.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var categorie in Model)
            {
                var count = categorie.Produits?.Count ?? 0;

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card category-card h-100 shadow-sm">

                        <!-- Image en background -->
                        <div class="category-card-bg"
                             style="background-image: url('https://picsum.photos/300/200?random=@categorie.Id');">
                        </div>

                        <!-- Zone centrale cliquable -->
                        <a asp-action="Details"
                           asp-route-id="@categorie.Id"
                           class="text-decoration-none text-white flex-grow-1 d-flex align-items-center justify-content-center position-relative">

                            <div class="text-center">
                                <p class="fw-bold category-title mb-2">@categorie.Nom</p>

                                <span class="badge bg-dark bg-opacity-75 px-3 py-2">
                                    @count produit@(count > 1 ? "s" : "")
                                </span>
                            </div>
                        </a>

                        <!-- Footer avec actions -->
                        <div class="card-footer py-3 bg-transparent border-0 d-flex gap-2 position-relative">
                            <a asp-action="Edit"
                               asp-route-id="@categorie.Id"
                               class="btn btn-sm btn-outline-light w-100"
                               title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@categorie.Id"
                               class="btn btn-sm btn-danger w-100"
                               title="Supprimer"
                               onclick="return confirm('Supprimer cette catégorie ?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>


    }
</div>
