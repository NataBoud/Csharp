@model IEnumerable<CaisseEnregistreuse.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill fw-semibold ps-2 pe-3 py-0 d-flex justify-content-center align-items-center">
            <i class="bi bi-plus fs-3 fw-bolder"></i> Nouvelle catégorie
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Aucune catégorie enregistrée.</div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th>Nombre de produits</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categorie in Model)
                {
                    var count = categorie.Produits?.Count ?? 0;
                    <tr>
                        <td>@categorie.Nom</td>
                        <td>@count produit@(count > 1 ? "s" : "")</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@categorie.Id" class="btn btn-sm btn-outline-secondary rounded-pill me-1" title="Détails">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@categorie.Id" class="btn btn-sm btn-outline-primary rounded-pill me-1" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@categorie.Id" class="btn btn-sm rounded-pill btn-outline-danger" title="Supprimer" onclick="return confirm('Supprimer cette catégorie ?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
