@model IEnumerable<CaisseEnregistreuse.Models.Produit>

@{
    ViewData["Title"] = "Produits";
}

<div class="d-flex justify-content-between align-items-center my-5">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary rounded-pill fw-semibold ps-2 pe-3 py-0 d-flex justify-content-center align-items-center"> 
        <i class="bi bi-plus fs-3 fw-bolder"></i> Nouveau produit
    </a>
</div>

  @if (!Model.Any())
{
    <div class="alert alert-info">Aucun produit disponible.</div>
}
else
{
    <div class="row g-4">
        @foreach (var produit in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">

                <div class="card h-100 shadow-sm">
                    <a asp-action="Details" asp-route-id="@produit.Id" class="text-decoration-none text-dark">
                        <img src="https://picsum.photos/300/200?random=@produit.Id" class="card-img-top" alt="@produit.Nom">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">@produit.Nom</h5>
                            <div class="d-flex justify-content-start align-items-center gap-2">
                                <span class="badge bg-secondary" style="padding-bottom: .375rem">@produit.Categorie?.Nom</span>
                                @if (produit.QuantiteStock <= 5)
                                {
                                    <span class="badge bg-danger" style="padding-bottom: .375rem">Stock faible</span>
                                }
                                else
                                {
                                    <span class="badge bg-success" style="padding-bottom: .375rem">En stock</span>
                                }
                            </div>
                            <p class="card-text text-muted small text-truncate-2 mt-2">@produit.Description</p>
                        </div>
                    </a>
                    <!-- Card footer -->
                    <div class="d-flex justify-content-between align-items-center px-3 pb-3">
                        <p class="fw-bold fs-5 mb-0">@produit.Prix.ToString("C")</p>
                        <button type="button" class="btn btn-primary btn-ajouter-panier" data-produit-id="@produit.Id">
                            + Ajouter
                        </button>
                    </div>
                </div>

            </div>

        }
    </div>
}





