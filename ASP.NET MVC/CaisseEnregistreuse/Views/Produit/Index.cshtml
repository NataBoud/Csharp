@model IEnumerable<CaisseEnregistreuse.Models.Produit>

@{
    ViewData["Title"] = "Liste des produits";
}

<h1 class="my-4 text-center">@ViewData["Title"]</h1>

<div class="row g-4">
    @foreach (var produit in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">

                <!-- Image (placeholder pour l'instant) -->
                <img src="https://picsum.photos/300/200" class="card-img-top" alt="@produit.Nom">

                <div class="card-body d-flex flex-column">
                    <!-- Nom -->
                    <h5 class="card-title">@produit.Nom</h5>

                    <!-- Catégorie -->
                    <span class="badge bg-secondary mb-2 align-self-start">@produit.Categorie.Nom</span>
                    <!-- Description -->
                    <p class="card-text text-muted small text-truncate-2">@produit.Description</p>

                    <div class="d-flex justify-content-between align-content-center mb-3">
                        <!-- Prix -->
                        <p class="fw-bold mb-0">@produit.Prix.ToString("C")</p>
                        <!-- Stock -->
                        @if (produit.QuantiteStock <= 5)
                        {
                            <span class="badge bg-danger">Stock faible</span>
                        }
                        else
                        {
                            <span class="badge bg-success">En stock</span>
                        }
                    </div>
                    <!-- Actions -->
                    <div class="mt-auto d-flex gap-2">
                        <a asp-action="Details"asp-route-id="@produit.Id"class="btn btn-sm btn-outline-secondary w-100">Détails</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
