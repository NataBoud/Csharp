@model CaisseEnregistreuse.Models.Produit

@{
    ViewData["Title"] = $"Modifier produit : {Model.Nom}";
}

<div class="d-flex justify-content-center">
    <div class="w-100" style="max-width: 600px; min-width: 280px;">

        <h2 class="my-5">@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post" asp-route-id="@Model.Id">

            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prix" class="form-label"></label>
                <input asp-for="Prix" class="form-control" type="number" step="0.01"
                       value="@Model.Prix.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuantiteStock" class="form-label"></label>
                <input asp-for="QuantiteStock" class="form-control" type="number" />
                <span asp-validation-for="QuantiteStock" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategorieId" class="form-label">Catégorie</label>
                <select asp-for="CategorieId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Nom", Model.CategorieId))">
                    <option value="0">-- Sélectionner une catégorie --</option>
                </select>
                <span asp-validation-for="CategorieId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
