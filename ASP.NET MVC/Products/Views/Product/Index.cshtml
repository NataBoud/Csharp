@model IEnumerable<Product>

<h1>Liste des produits</h1>


<a class="btn btn-success mb-3" asp-action="CreateRandom">
    Ajouter un produit aléatoire
</a>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Name)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Price)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Stock)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.IsOnDiscount)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    @(product.IsOnDiscount
                                    ? Html.Raw(
                                    $"<span class='text-decoration-line-through text-muted'>{product.Price:C}</span> " +
                                    $"<span class='text-danger fw-bold'>{product.DiscountedPrice:C}</span>")
                                    : product.Price.ToString("C"))
                </td>
                <td>
                    <span class="badge @(product.Stock < 10 ? "bg-danger" : "bg-success")">
                        @product.Stock
                    </span>
                </td>
                <td>
                    <span class="@(product.IsOnDiscount ? "badge bg-warning text-dark" : "text-muted")">
                        @(product.IsOnDiscount ? "-20%" : "Non")
                    </span>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@product.Id">Détails</a>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Supprimer ce produit ?');">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
