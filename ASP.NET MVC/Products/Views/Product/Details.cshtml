@model Product

@{
    ViewBag.Title = $"Détails - {Model.Name}";
    Layout = "_Layout";

}

<div class="card" style="max-width: 400px;">
    <div class="card-header">
        <span class="badge bg-primary">ID: @Model.Id</span>
        @if (Model.IsOnDiscount)
        {
            <span class="badge bg-warning text-dark">En Promotion</span>
        }
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nom</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Prix</dt>
            <dd class="col-sm-8">
                @if (Model.IsOnDiscount)
                {
                    <span class="text-decoration-line-through">@Model.Price.ToString("C")</span>
                    <span class="text-danger fw-bold">@Model.DiscountedPrice.ToString("C")</span>
                }
                else
                {
                    @Model.Price.ToString("C")
                }
            </dd>

            <dt class="col-sm-4">Stock</dt>
            <dd class="col-sm-8">@Model.Stock unité(s)</dd>

            <dt class="col-sm-4">En promotion</dt>
            <dd class="col-sm-8">@(Model.IsOnDiscount ? "Oui (-20%)" : "Non")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">← Retour à la liste</a>
</div>
