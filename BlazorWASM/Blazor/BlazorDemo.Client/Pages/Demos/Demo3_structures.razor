@page "/demos/demo3-structures"

<h3>Structures iteratives et conditionnelles</h3>


<div class="card mb-3">
    <div class="card-header">@@if / @@else</div>
    <div class="card-body">
        <label>Âge: <strong>@age</strong></label>
        <input type="range" class="form-range" min="0" max="100" @bind="age" @bind:event="oninput" />

        @if (age < 18)
        {
            <div class="alert alert-warning"> Mineur</div>
        }
        else if (age < 65)
        {
            <div class="alert alert-success"> Adulte</div>
        }
        else
        {
            <div class="alert alert-info"> Senior</div>
        }
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">@@foreach - Liste des fruits</div>
    <div class="card-body">
        <ul class="list-group mb-3">
            @foreach (var fruit in fruits)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @fruit
                    <button class="btn btn-sm btn-danger" @onclick="() => SupprimerFruit(fruit)">x</button>
                </li>
            }
        </ul>
        <div class="input-group">
            <input class="form-control" placeholder="Nouveau fruit" @bind="nouveauFruit" />
            <button class="btn btn-primary" @onclick="AjouterFruit">Ajouter</button>
        </div>
    </div>
</div>


@code {
    private int age = 25;
    private List<string> fruits = new() { "Pomme", "Banane", "Orange" };
    private string nouveauFruit = "";
    private int etoiles = 5;

    private void AjouterFruit()
    {
        if (!string.IsNullOrWhiteSpace(nouveauFruit))
        {
            fruits.Add(nouveauFruit);
            nouveauFruit = "";
        }
    }

    private void SupprimerFruit(string fruit)
    {
        fruits.Remove(fruit);
    }
}

