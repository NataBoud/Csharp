@using BlazorDemo.Client.Services
@using BlazorDemo.Shared.Models

@inject IProduitServiceClient ProduitService

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> VisibleChanged { get; set; }
    [Parameter] public Produit? ProduitAModifier { get; set; }
    [Parameter] public EventCallback OnProduitModifie { get; set; }

    private ProduitDto dto = new();
    private List<string> categories = new() {  "Informatique",
        "Accessoires",
        "Audio" };

    protected override void OnParametersSet()
    {
        if (ProduitAModifier != null)
        {
            dto = new ProduitDto
            {
                Nom = ProduitAModifier.Nom,
                Description = ProduitAModifier.Description,
                Prix = ProduitAModifier.Prix,
                Stock = ProduitAModifier.Stock,
                Categorie = ProduitAModifier.Categorie,
                EstActif = ProduitAModifier.EstActif
            };
        }
    }

    private async Task Modifier()
    {
        if (ProduitAModifier == null) return;

        await ProduitService.ModifierAsync(ProduitAModifier.Id, dto);
        await OnProduitModifie.InvokeAsync();
        await Fermer();
    }

    private async Task Fermer()
        => await VisibleChanged.InvokeAsync(false);
}

@if (Visible)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-fill"></i> Modifier le produit</h5>
                    <button type="button" class="btn-close" @onclick="Fermer"></button>
                </div>

                <EditForm Model="dto" OnValidSubmit="Modifier">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nom</label>
                            <InputText class="form-control" @bind-Value="dto.Nom" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" @bind-Value="dto.Description" />
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="form-label">Prix</label>
                                <InputNumber class="form-control" @bind-Value="dto.Prix" />
                            </div>
                            <div class="col">
                                <label class="form-label">Stock</label>
                                <InputNumber class="form-control" @bind-Value="dto.Stock" />
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Catégorie</label>
                            <InputSelect class="form-control" @bind-Value="dto.Categorie">
                                <option value="">-- Sélectionnez --</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat">@cat</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="form-check mt-3">
                            <InputCheckbox class="form-check-input" @bind-Value="dto.EstActif" />
                            <label class="form-check-label">Actif</label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" @onclick="Fermer">Annuler</button>
                        <button class="btn btn-primary" type="submit"><i class="bi bi-check-lg"></i> Enregistrer</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}
