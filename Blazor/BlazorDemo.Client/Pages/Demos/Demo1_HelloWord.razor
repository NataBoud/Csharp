@page "/demos/demo1-helloword"

<h3>Demo1_HelloWord</h3>

<div class="card mb-3">
    <div class="card-header">
        Langage
    </div>

    <div class="card-body">
        <p><strong>Nom :</strong> @langage</p>
        <p><strong>Version :</strong> @version</p>
        <p><strong>Statut :</strong>
            <span class="badge @(isActive ? "bg-success" : "bg-danger")">
                @(isActive ? "Actif" : "Inactif")
            </span>
        </p>
    </div>
</div>


<div class="card mb-3">
    <div class="card-header"> Date et Heure</div>
    <div class="card-body">
        <p><strong>Maintenant:</strong> @DateTime.Now.ToString("dddd dd MMMM yyyy HH:mm:ss")</p>
        <p><strong>Date courte:</strong> @DateTime.Now.ToShortDateString()</p>
        <p><strong>Heure:</strong> @DateTime.Now.ToShortTimeString()</p>
        <p><strong>Année:</strong> @DateTime.Now.Year</p>
        <p><strong>Jour de l'année:</strong> @DateTime.Now.DayOfYear</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">Expressions C#</div>
    <div class="card-body">
        <p>2 + 2 = @(2 + 2)</p>
        <p>10 × 5 = @(10 * 5)</p>
        <p>100 ÷ 3 = @((100.0 / 3).ToString("F2"))</p>
        <p>2^10 = @Math.Pow(2, 10)</p>
        <p>√144 = @Math.Sqrt(144)</p>
        <p>PI = @Math.PI.ToString("F5")</p>
        <p>Aléatoire (1-100): @Random.Shared.Next(1, 101)</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header"> Méthodes</div>
    <div class="card-body">
        <p><strong>Message:</strong> @ObtenirMessage()</p>
        <p><strong>Salutation:</strong> @Saluer("Blazor")</p>
        <p><strong>Nom complet:</strong> @ObtenirDesInfo()</p>
        <p><strong>Majuscules:</strong> @nom.ToUpper()</p>
        <p><strong>Longueur du nom:</strong> @nom.Length caractères</p>
        <p><strong>Inversé:</strong> @Inverser(nom)</p>
    </div>
</div>




@code {

    private string nom = "Toto";
    private string langage = "Blazor WebAssembly";
    private string version = ".NET 8";
    private bool isActive = true;

    private string ObtenirMessage() => "Text ....";

    private string Saluer(string qui) => $"Bomjour, {qui} !";

    private string ObtenirDesInfo() => $"{nom} - {langage}";
    private string ToUpper() => nom.ToUpper();
    private string Inverser(string texte)
    {
        return new string(texte.Reverse().ToArray());
    }
}
}
